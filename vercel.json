{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "https://chat-app-eight-omega-74.vercel.app/api"
    },
    
    {
      "src": "/.*",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
